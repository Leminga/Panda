# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#POST	/login						controllers.UserLogin.save()
#GET	/							controllers.Application.index()
#GET	/LoginData					controllers.UserLogin.load()
POST	/login						controllers.SecurityController.login()
POST	/register					controllers.SecurityController.register()
#PATCH  /saveUser                   controllers.VolunteerController.saveAll()
GET		/verify/:token						controllers.SecurityController.verificationGetter(token: String)

# Dummy-Routes
#GET 	/getUserTest				controllers.DummyController.userDataTest()
GET    	/getUser                    controllers.DummyController.dummyData()
GET		/getJson					controllers.DummyController.newDummyJson()


# Map static resources from the /public folder to the /assets URL path
GET		/					controllers.Assets.at(path="/public", file="index.html")
GET		/assets/*file				controllers.Assets.at(path="/public", file)

